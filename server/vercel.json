{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",  
      "use": "@vercel/node"      
    },
    {
      "src": "Client/dist/**",     
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",         
      "dest": "/server/index.js"   
    },
    {
      "src": "/(.*)",               
      "dest": "/Client/dist/$1"
    }
  ]
}
